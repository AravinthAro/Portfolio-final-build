        </div>
        <div onclick={{action "openModal" imageName.sixth}} class="image-wrapper">
            <img class="img-fluid border" src="/assets/images/{{imageName.sixth}}">
        </div>
        <div onclick={{action "openModal" imageName.seventh}} class="image-wrapper">
            <img class="img-fluid border" src="/assets/images/{{imageName.seventh}}">
        </div>
    </div>
    {{/each}}
</div>
{{#if isModalOpen}}
    <div class="modalBackdrop" id="modalImageContainer">
        <span onclick={{action "closeModal"}}>Close</span>
    </div>
{{/if}}