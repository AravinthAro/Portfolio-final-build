<div class="row">
    {{#each imageList as |imageName index| }}
    <div class="col-sm-4 col-12 grid-col">
        <div onclick={{action "openModal" imageName.first}} class="image-wrapper">
             <img class="img-fluid border" src="/assets/images/{{imageName.first}}">
        </div>
